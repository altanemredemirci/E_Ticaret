@using E_Ticaret_Entity.Entity
@model Product

<div id="product-details" class="container pb-5 pt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Upload/@Model.Image" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <div class="row">
                @*Başlık*@
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                @*Stok bilgisi*@
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }

                    <span class="product-number">#234653</span>
                </div>
            </div>
            <div class="row mt-2">
                @*Açıklama*@
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half-o" aria-hidden="true"></i>
                    <span class="badge badge-success">53</span>
                </div>
                <div id="write-review" class="col-md-4">
                    <a href="#"> Write a Review</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h4 id="product-price" style="font-size:28px;
    color:red;">
                        @Model.Price TL
                    </h4>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">

                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i => i.Id)
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                            Add To Cart
                        </button>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">Description</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Payment Methods</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-reviews-tab" data-toggle="pill" href="#pills-reviews" role="tab" aria-controls="pills-reviews" aria-selected="false">Reviews</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas faucibus purus id gravida laoreet. Donec neque ipsum, facilisis in vehicula nec, tristique a tellus. Praesent vitae libero orci. Pellentesque imperdiet porta ornare. Sed ac odio enim. Etiam suscipit, urna eget pellentesque consequat, lectus erat volutpat massa, nec lacinia lorem mi sed felis. Sed elementum justo a lobortis porttitor.</div>
                    <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas faucibus purus id gravida laoreet. Donec neque ipsum, facilisis in vehicula nec, tristique a tellus. Praesent vitae libero orci. Pellentesque imperdiet porta ornare. Sed elementum justo a lobortis porttitor.</div>
                    <div class="tab-pane fade" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">Lorem ed. Sed elementum justo a lobortis porttitor.</div>
                </div>
            </div>
        </div>
    </div>
</div>